<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.RepeatQuran.Section" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.RepeatQuran.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Popup menu text/background uses DayNight tokens -->
    <style name="TextAppearance.RepeatQuran.MenuItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="PopupMenu.RepeatQuran" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurface</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.RepeatQuran.MenuItem</item>
    </style>

    <style name="ThemeOverlay.RepeatQuran.Popup" parent="ThemeOverlay.MaterialComponents">
        <item name="popupMenuStyle">@style/PopupMenu.RepeatQuran</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
