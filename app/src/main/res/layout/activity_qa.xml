<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QA Harness"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam Controls"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editSpamCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Count (e.g., 10)"/>
            <EditText
                android:id="@+id/editSpamDelayMs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Delay ms (e.g., 150)"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpamPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam Play/Pause"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpamNextPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Spam Next/Prev"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#33000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Simulation"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimFocusLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate Focus Loss (Call)"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimFocusGain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Simulate Focus Gain"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#33000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reciter &amp; Soak"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitchReciters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Reciters Mid-Play"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartInfiniteSoak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Start âˆž Soak (2 min)"/>

    </LinearLayout>

</ScrollView>
