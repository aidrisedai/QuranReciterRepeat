<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Repeat Quran"
            app:titleCentered="true"
            app:titleTextColor="@color/md_theme_onPrimary" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/modeTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/md_theme_onPrimary"
            app:tabSelectedTextColor="@color/md_theme_onPrimary"
            app:tabTextColor="@color/md_theme_onPrimary"
            android:background="?attr/colorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/modePager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/repeatInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Repeat"
        app:layout_constraintTop_toBottomOf="@id/modePager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <AutoCompleteTextView
            android:id="@+id/repeatDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:importantForAutofill="no"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/surahInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Surah"
        app:layout_constraintTop_toBottomOf="@id/repeatInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ayahInputLayout"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp">
        <AutoCompleteTextView
            android:id="@+id/surahSingleDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ayahInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ayah (>=1)"
        app:layout_constraintTop_toBottomOf="@id/repeatInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/surahInputLayout"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAyah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadAyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Ayah"
        app:layout_constraintTop_toBottomOf="@id/ayahInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:id="@+id/controlsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLoadAyah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Play" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Pause" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Resume" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Next" />
    </LinearLayout>

    <!-- Range selection (Start Surah:Ayah -> End Surah:Ayah) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/startSurahLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start Surah"
        app:layout_constraintTop_toBottomOf="@id/controlsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endSurahLayout"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp">
        <AutoCompleteTextView
            android:id="@+id/startSurahDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/startAyahLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start Ayah"
        app:layout_constraintTop_toBottomOf="@id/startSurahLayout"
        app:layout_constraintStart_toStartOf="@id/startSurahLayout"
        app:layout_constraintEnd_toEndOf="@id/startSurahLayout"
        android:layout_marginTop="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editStartAyah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionNext" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/endSurahLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="End Surah"
        app:layout_constraintTop_toBottomOf="@id/controlsRow"
        app:layout_constraintStart_toEndOf="@id/startSurahLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp">
        <AutoCompleteTextView
            android:id="@+id/endSurahDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/endAyahLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="End Ayah"
        app:layout_constraintTop_toBottomOf="@id/endSurahLayout"
        app:layout_constraintStart_toStartOf="@id/endSurahLayout"
        app:layout_constraintEnd_toEndOf="@id/endSurahLayout"
        android:layout_marginTop="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEndAyah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Range"
        app:layout_constraintTop_toBottomOf="@id/endAyahLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Page selection (1..604) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pageInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Page (1–604)"
        app:layout_constraintTop_toBottomOf="@id/btnLoadRange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Page"
        app:layout_constraintTop_toBottomOf="@id/pageInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Surah selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/surahSelectLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Surah"
        app:layout_constraintTop_toBottomOf="@id/btnLoadPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">
        <AutoCompleteTextView
            android:id="@+id/surahDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Surah"
        app:layout_constraintTop_toBottomOf="@id/surahSelectLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChooseReciters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Reciters"
        app:layout_constraintTop_toBottomOf="@id/btnLoadSurah"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtReciters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selected reciters: (none)"
        app:layout_constraintTop_toBottomOf="@id/btnChooseReciters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSavePreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Preset"
        app:layout_constraintTop_toBottomOf="@id/txtReciters"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Downloads navigation -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloads"
        app:layout_constraintTop_toBottomOf="@id/txtReciters"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- QA navigation (debug only) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenQA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QA"
        app:layout_constraintTop_toBottomOf="@id/btnOpenDownloads"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Divider -->
    <View
        android:id="@+id/dividerHistory"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/md_theme_outline"
        app:layout_constraintTop_toBottomOf="@id/btnOpenQA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Recent Sessions -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.RepeatQuran.Section"
        android:text="Recent Sessions"
        app:layout_constraintTop_toBottomOf="@id/dividerHistory"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/historyContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Presets -->
    <TextView
        android:id="@+id/presetsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presets"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/historyContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/presetContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/presetsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
